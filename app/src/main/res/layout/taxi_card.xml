<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="myanmarnightlife.lower.team1.activities.TaxiServiceActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/card_ts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/margin_small"
            app:cardElevation="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <com.flaviofaria.kenburnsview.KenBurnsView
                        android:id="@+id/iv_taxiapp_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/owaybg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#63000000"/>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_taxiapp_logo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/oway" />

                </FrameLayout>


                <TextView
                    android:id="@+id/tv_taxiapp_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:lineSpacingMultiplier="1.3"
                    android:text="@string/owaydesc"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/secondary_text_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium">

                    <info.hoang8f.widget.FButton
                        android:id="@+id/btn_website"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:background="@color/bg"
                        android:text="Website"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textColor="#fff"
                        fbutton:buttonColor="@color/color_concrete"
                        fbutton:cornerRadius="6dp"
                        fbutton:shadowColor="@color/color_asbestos"
                        fbutton:shadowEnabled="true"
                        fbutton:shadowHeight="6dp" />

                    <info.hoang8f.widget.FButton
                        android:id="@+id/btn_app"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:background="@color/bg"
                        android:textAllCaps="false"
                        android:text="Application"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textColor="#fff"
                        fbutton:buttonColor="@color/website"
                        fbutton:cornerRadius="6dp"
                        fbutton:shadowColor="@color/website_dark"
                        fbutton:shadowEnabled="true"
                        fbutton:shadowHeight="6dp" />

                    <info.hoang8f.widget.FButton
                        android:id="@+id/btn_go"
                        android:layout_width="120dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:textAllCaps="false"
                        android:layout_gravity="right"
                        android:background="@color/bg"
                        android:text="Phone"
                        android:textColor="#fff"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        fbutton:buttonColor="@color/post"
                        fbutton:cornerRadius="6dp"
                        fbutton:shadowColor="@color/post_dark"
                        fbutton:shadowEnabled="true"
                        fbutton:shadowHeight="6dp" />

                </LinearLayout>



            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

</ScrollView>

