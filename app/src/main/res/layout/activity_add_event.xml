<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="myanmarnightlife.lower.team1.activities.AddEventActivity">

    <EditText
        android:id="@+id/et_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/input_outline"
        android:hint="Enter Event Name..."/>

    <EditText
        android:id="@+id/et_event_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/input_outline"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="Enter Event URL..."/>

    <EditText
        android:id="@+id/et_event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/input_outline"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="Enter Event Time..."/>

    <EditText
        android:id="@+id/et_event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/input_outline"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="Enter Event Location..."/>

    <EditText
        android:id="@+id/et_event_gps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/input_outline"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="Enter Event GPS..."/>

    <EditText
        android:id="@+id/et_event_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/input_outline"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="Enter Event Type..."/>

    <EditText
        android:id="@+id/et_event_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/input_outline"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="Enter Event Information..."/>

    <Button
        android:id="@+id/btn_submit_event"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit Event"
        android:textSize="20sp"
        android:background="@drawable/button_bg"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal" />




</LinearLayout>
