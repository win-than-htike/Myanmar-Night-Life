<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="myanmarnightlife.lower.team1.adapters.FontAdapter" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="@dimen/margin_small"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/margin_medium_2"
                    android:text="Rating"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="@dimen/text_heading_1x"
                    app:bind_font='@{"bold"}' />

                <requestFocus />


                <RatingBar
                    android:id="@+id/tv_rating"
                    style="?android:ratingBarStyle"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:isIndicator="true"
                    android:padding="4dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="@dimen/margin_small"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/margin_medium_2"
                    android:text="Review"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="@dimen/text_heading_1x"
                    app:bind_font='@{"bold"}' />


                <myanmarnightlife.lower.team1.components.textviews.MMTextView
                    android:id="@+id/tv_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:lineSpacingMultiplier="1.4"
                    android:padding="4dp"
                    android:text="#ကြ်န္ေတာ္တို႕ခ်စ္တဲ႕လြယ္အိပ္ႀကီးနဲဲ႔အတူဝုန္းျကဆို႕……"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="18sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="@dimen/margin_small"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/margin_medium_2"
                    android:text="Phone"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="@dimen/text_heading_1x"
                    app:bind_font='@{"bold"}' />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium">

                    <myanmarnightlife.lower.team1.components.textviews.MMTextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium_2"
                        android:lineSpacingMultiplier="1.3"
                        android:padding="4dp"
                        android:text="09-123123123123"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="18sp"
                        app:bind_font='@{"thin"}' />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_medium_3"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/ic_local_phone_black_24dp" />

                </RelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/margin_medium_2"
                    android:text="Open Time"
                    android:textColor="@android:color/primary_text_dark"

                    android:textSize="@dimen/text_heading_1x"
                    app:bind_font='@{"bold"}' />

                <myanmarnightlife.lower.team1.components.textviews.MMTextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"

                    android:lineSpacingMultiplier="1.3"
                    android:padding="4dp"
                    android:text="8 PM - 1 AM"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="18sp"
                    app:bind_font='@{"thin"}' />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/margin_medium_2"
                    android:text="Address"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="@dimen/text_heading_1x"
                    app:bind_font='@{"bold"}' />


                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:lineSpacingMultiplier="1.3"
                    android:padding="@dimen/margin_medium"
                    android:text="Shwedagon Pagoda Road, Yangon Myanmar"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="18sp"
                    app:bind_font='@{"thin"}'

                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="@dimen/margin_medium_2"
                    android:text="Comment"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="@dimen/text_heading_1x"
                    app:bind_font='@{"bold"}' />


                <EditText
                    android:id="@+id/et_user_review"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:breakStrategy="balanced"
                    android:fitsSystemWindows="true"
                    android:gravity="top"
                    android:hint="Comment"
                    android:inputType="textMultiLine"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textColorHint="@android:color/secondary_text_dark" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_user_review"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="POST"
                    android:textColor="#fff"
                    android:layout_marginBottom="@dimen/margin_medium_2"
                    android:layout_marginRight="@dimen/margin_medium_2"
                    fbutton:buttonColor="@color/post"
                    fbutton:shadowColor="@color/post_dark"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="6dp"
                    fbutton:cornerRadius="6dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:background="@color/bg"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>