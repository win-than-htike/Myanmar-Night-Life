<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Rating"
                android:textColor="#000"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold" />


            <RatingBar
                android:id="@+id/tv_rating"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="4dp"
                android:isIndicator="true"
                style="?android:ratingBarStyle"
                android:padding="@dimen/margin_medium"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Review"
                android:textColor="#000"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold" />


            <myanmarnightlife.lower.team1.components.textviews.MMTextView
                android:id="@+id/tv_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="4dp"
                android:lineSpacingMultiplier="1.4"
                android:padding="@dimen/margin_medium"
                android:text="#ကြ်န္ေတာ္တို႕ခ်စ္တဲ႕လြယ္အိပ္ႀကီးနဲဲ႔အတူဝုန္းျကဆို႕……"
                android:textColor="#000"
                android:textSize="@dimen/text_regular_3"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Phone"
                android:textColor="#000"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium">

                <myanmarnightlife.lower.team1.components.textviews.MMTextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:layout_marginTop="8dp"
                    android:lineSpacingMultiplier="1.3"
                    android:padding="@dimen/margin_medium"
                    android:text="09-123123123123"
                    android:textColor="#000"
                    android:textSize="@dimen/text_regular_3" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_local_phone_black_24dp"
                    android:layout_marginRight="@dimen/margin_medium_3"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Open Time"
                android:textColor="#000"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold" />


            <myanmarnightlife.lower.team1.components.textviews.MMTextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="4dp"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_medium"
                android:text="8 PM - 1 AM"
                android:textColor="#000"
                android:textSize="@dimen/text_regular_3" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Address"
                android:textColor="#000"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold" />


            <myanmarnightlife.lower.team1.components.textviews.MMTextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginTop="4dp"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_medium"
                android:text="Shwedagon Pagoda Road, Yangon Myanmar"
                android:textColor="#000"
                android:textSize="@dimen/text_regular_3"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_medium_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="Your Opinion"
                android:textColor="#000"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/text_heading_1x"
                android:textStyle="bold" />


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:gravity="top"
                android:hint="Your Opinion"
                android:fitsSystemWindows="true"
                android:breakStrategy="balanced"
                android:focusableInTouchMode="true"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:padding="5dp"
                android:layout_marginLeft="@dimen/margin_medium_2"/>


            <info.hoang8f.widget.FButton
                android:id="@+id/btn_ambulance"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Post"
                android:layout_gravity="right"
                android:textColor="#fff"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                fbutton:buttonColor="@color/post"
                fbutton:shadowColor="@color/post_dark"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="6dp"
                fbutton:cornerRadius="6dp"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:background="@color/bg"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
