<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleColor="@color/bg"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:id="@+id/beer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_height"
                    app:cardBackgroundColor="#182634"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/margin_medium_2"
                            android:layout_marginTop="@dimen/margin_medium_2"
                            app:srcCompat="@drawable/ic_beer" />

                        <TextView
                            android:id="@+id/beer_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="@dimen/margin_medium_2"
                            android:text="Beer Shop"
                            android:textColor="#fff"
                            android:textSize="25sp"
                            app:bind_font='@{"bold"}' />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </com.balysv.materialripple.MaterialRippleLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/karaoke"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_weight="1"
                app:cardBackgroundColor="#182634"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        app:srcCompat="@drawable/ic_karaoke" />

                    <TextView
                        android:id="@+id/karaoke_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:text="Karaoke"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        app:bind_font='@{"bold"}' />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/night_club"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_weight="1"
                app:cardBackgroundColor="#182634"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        app:srcCompat="@drawable/ic_mirror_ball" />

                    <TextView

                        android:id="@+id/night_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:text="Night Club"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        app:bind_font='@{"bold"}' />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_weight="1"
                app:cardBackgroundColor="#182634"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        app:srcCompat="@drawable/bar" />

                    <TextView
                        android:id="@+id/whiskey_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:text="Bar"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        app:bind_font='@{"bold"}' />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/massage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_weight="1"
                app:cardBackgroundColor="#182634"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        app:srcCompat="@drawable/ic_massage_one" />

                    <TextView
                        android:id="@+id/massage_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:text="Massage"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        app:bind_font='@{"bold"}' />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/restaurant"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:layout_weight="1"
                app:cardBackgroundColor="#182634"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        app:srcCompat="@drawable/restaurant" />

                    <TextView
                        android:id="@+id/pizza_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        android:text="Restaurants"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        app:bind_font='@{"bold"}' />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</layout>