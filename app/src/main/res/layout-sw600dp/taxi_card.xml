    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="myanmarnightlife.lower.team1.activities.TaxiServiceActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/card_ts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/margin_small"
            app:cardElevation="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <com.flaviofaria.kenburnsview.KenBurnsView
                        android:id="@+id/iv_taxiapp_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/owaybg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:background="#63000000"/>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_taxiapp_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/oway" />

                </FrameLayout>


                <TextView
                    android:id="@+id/tv_taxiapp_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:lineSpacingMultiplier="1.3"
                    android:text="@string/owaydesc"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <info.hoang8f.widget.FButton
                    android:id="@+id/btn_oway"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/bg"
                    android:text="Go"
                    android:layout_marginBottom="@dimen/margin_medium_2"
                    android:layout_marginRight="@dimen/margin_medium_2"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:textColor="#fff"
                    fbutton:buttonColor="@color/post"
                    fbutton:cornerRadius="6dp"
                    fbutton:shadowColor="@color/post_dark"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="6dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

